{
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "illuminate/collections": "^11.0",
        "mikecao/flight": "^3.0",
        "symfony/dotenv": "^7.0",
        "twig/twig": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "clear-views": "docker exec -ti iptv-php rm -rf cache/views",
        "post-install-cmd": [
            "clear-views"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
