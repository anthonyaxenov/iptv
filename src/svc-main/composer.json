{
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "mikecao/flight": "^3.12",
        "symfony/dotenv": "^7.1",
        "twig/twig": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "Controllers\\": "controllers/",
            "Exceptions\\": "exceptions/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "scripts": {
        "clear-views": "rm -rf cache/views",
        "post-install-cmd": [
            "@clear-views"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
